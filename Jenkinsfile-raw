pipeline {
  agent {
    kubernetes {
      yaml """
kind: Pod
metadata:
  name: cloudbees-core
spec:
  containers:
    - name: maven
      image: jdk
      runAsUser: 1000
      command:
        - cat
      tty: true
      workingDir: "/home/jenkins/agent"
      securityContext:
        runAsUser: 1000
"""
    }
  }

  stages {
    stage('Run maven') {
      steps {
             container('jdk') {
              sh './mvnw spring-javaformat:apply  && ./mvnw package'
          }
      }
    }
}
}
